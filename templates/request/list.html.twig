{% extends "base.html.twig" %}
 {% block body %}
     <table class="table table-hover table-striped">
         <thead class="table-primary">
         <tr>
             <td>Идентификатор</td>
             <td>Заголовок</td>
             <td>Сообщение</td>
             <td>Статус</td>
             <td>Дата создания</td>
             <td>Автор</td>
         </tr>
         </thead>
         <tbody>
         {% for request in request_data %}
             <tr>
                 <td>{{ request.id }}</td>
                 <td><a href="{{ path('request view', {'id': request.id}) }}" class="nav-link">{{ request.title }}</a>
                 </td>
                 <td>{{ request.message }}</td>
                 <td>{{ request.status }}</td>
                 <td>{{ request.createdAt.format("Y-m-d") }}</td>
                 <td>
                     {% if request.createdBy is not null %}
                         {{ request.createdBy.email }}
                     {% endif %}
                 </td>
             </tr>
         {% endfor %}
         </tbody>
     </table>
     <a href="{{ path('add-request') }}" class="btn btn-primary">Добавить</a>
 {% endblock %}